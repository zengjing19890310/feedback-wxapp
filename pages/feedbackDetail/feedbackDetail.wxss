.showView{
  display: block;
}
.hideView{
  display: none;
}
.feedbackDetail{
  width: 100%;
  font-size: 25rpx;
}
.detailInfo{
  width: 100%;
  padding:20rpx;
  box-sizing: border-box;
}
.detailInfo .header{
  /* display: flex;
  flex-direction: row;
  justify-content: space-between; */
}
.detailInfo .header .left{
  float: left;
}
.detailInfo .header .right{
  float: right;
  position: relative;
  top: 18rpx;
}
.detailInfo .header::after{
  content:'';
  display: block;
  clear: both;
}

.detailInfo .name,
.detailInfo .body .footer .interaction{
  position: relative;
}
.detailInfo .name{
  left:10rpx; 
  font-size:30rpx;
  color:#448aff;
  white-space:nowrap;
}
.detailInfo .focus{
  color:#ff6e8a;
  line-height:20px;
  border:1px solid red;
  width:110px;
  display:inline-block;
  text-align:center;
  border-radius:10rpx;
}
.detailInfo .focusBackGround{
  background: #ffe2e7;
}

.detailInfo .body{
  margin:20rpx 0 20rpx 80rpx;
}
.detailInfo .body .content{
  line-height: 20px;
  word-break:break-all;
  padding-right: 15px; 
}
.detailInfo .body .status{
  width:50px;
  height:20px;
  text-align:center;
  line-height:20px;
}
.detailInfo .body .status{
  width:135rpx;
  line-height:20px;
  display:inline-block;
  text-align:center;
  color: #fff;
  border-radius: 10rpx;
}
.detailInfo .body .notStatus{
  background-color: #ff6c89;
}
.detailInfo .body .yetStatus{
  background-color: #41d89b;
}
.detailInfo .body .footer{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 10px;
}
.detailInfo .body .footer .time{
  color: #999999
}
.detailInfo .body .detail-image{
  margin-top: 10px;
}
.detailInfo .body .footer .interaction{
  right: 10rpx;
}
.faFlog{
  width:60rpx;
  display:inline-block;
  border:1px solid #999999;
  text-align:center;
  border-radius:8rpx;
  margin-right: 10rpx;
}

