/* pages/index/index.wxss */
@import '../template/feedback/feedback.wxss';
.index-container{
 overflow:hidden;
 background-color:#ebebeb;
}
.index-container view{
  background-color:#ffffff;
}
.showView{
  display: block;
}
.content-container{
  border:1px solid red;
  position: absolute;
  left:4%;
  right:4%;
  top:0;
  bottom:0;
  overflow: hidden;
}
.hideView{
  display: none;
}
.dealMessage{
  height: 120px;
  padding:20rpx 4%;
}
.dealBlock{
  float:left;
  width:50%;
  height:120px;
}
.yetDealView,
.notDealView{
  height: 90%;
  margin-top: 2%;
  position: relative;
}
.notDealView{
  margin-right: 2%;
  background: linear-gradient(45deg, #ff5a93 0%, #ff9972 60%, #ffa26e 100%); 
}
.yetDealView{
  margin-left: 2%;
  background: linear-gradient(45deg, #1aadaf 0%, #3cd19d 60% , #4aed9b 100%);
}
.dealText,
.dealCount{
  display: inline-block;
  position: absolute;
  color: #fff;
}
.dealText{
  top: 20px;
  left: 50%;
  transform: translateX(-50%);
}
.dealCount{
  top: 60px;
  left: 50%;
  transform: translateX(-50%);
  font-size: 28px;
  font-weight: 600;
}

